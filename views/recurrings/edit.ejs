<% const title = 'Edit Recurring Transaction'; const body = `
<div class="page-header">
    <h1>Edit Recurring Transaction</h1>
    <a href="/recurrings" class="btn btn-secondary">Back</a>
</div>

<form method="POST" action="/recurrings/<%= recurring._id %>/edit" class="main-form">
    <div class="form-group">
        <label>Type</label>
        <input type="text" value="<%= recurring.type %>" disabled>
    </div>
    <div class="form-group">
        <label>Account</label>
        <input type="text" value="<%= recurring.accountType %>" disabled>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input type="text" value="$<%= recurring.amount.toFixed(2) %>" disabled>
    </div>
    <div class="form-group">
        <label>Frequency</label>
        <input type="text" value="<%= recurring.frequency %>" disabled>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= recurring.description %>" maxlength="200" required>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select id="category" name="category">
            <option value="">Uncategorized</option>
            <% if (typeof categories !== 'undefined' && categories) { %>
            <% categories.forEach(cat => { %>
            <option value="<%= cat.name %>" <%= recurring.category === cat.name ? 'selected' : '' %>><%= cat.name %></option>
            <% }) %>
            <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="isActive">Status</label>
        <select id="isActive" name="isActive">
            <option value="true" <%= recurring.isActive ? 'selected' : '' %>>Active</option>
            <option value="false" <%= !recurring.isActive ? 'selected' : '' %>>Inactive</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
`; %>
<%- include('../layout') %>


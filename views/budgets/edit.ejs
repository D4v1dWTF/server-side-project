<% const title = 'Edit Budget'; const body = `
<div class="page-header">
    <h1>Edit Budget</h1>
    <a href="/budgets" class="btn btn-secondary">Back</a>
</div>

<form method="POST" action="/budgets/<%= budget._id %>/edit" class="main-form">
    <div class="form-group">
        <label>Month</label>
        <input type="text" value="<%= budget.monthYear %>" disabled>
    </div>
    <div class="form-group">
        <label for="budgetAmount">Budget Amount</label>
        <input type="number" id="budgetAmount" name="budgetAmount" step="0.01" min="0.01" value="<%= budget.budgetAmount %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
`; %>
<%- include('../layout') %>


<% const title = 'Categories'; const body = `
<div class="page-header">
    <h1>Categories</h1>
    <a href="/categories/create" class="btn btn-primary">Create Category</a>
</div>

<% if (categories && categories.length > 0) { %>
<div class="categories-grid">
    <% categories.forEach(cat => { %>
    <div class="category-item" style="border-left: 4px solid <%= cat.color %>">
        <h3><%= cat.name %></h3>
        <div class="category-actions">
            <a href="/categories/<%= cat._id %>/edit" class="btn btn-small">Edit</a>
            <form method="POST" action="/categories/<%= cat._id %>/delete" style="display:inline;" onsubmit="return confirm('Delete this category?')">
                <button type="submit" class="btn btn-small btn-danger">Delete</button>
            </form>
        </div>
    </div>
    <% }) %>
</div>
<% } else { %>
<p>No categories. <a href="/categories/create">Create one</a></p>
<% } %>
`; %>
<%- include('../layout') %>


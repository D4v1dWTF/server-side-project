<%
const title = 'Register';
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <main class="container">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
        <% } %>
        <div class="auth-container">
            <div class="auth-box">
                <h1>Register</h1>
                <form method="POST" action="/register">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" required minlength="3" maxlength="30">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="currentBalance">Current Account Balance</label>
                        <input type="number" id="currentBalance" name="currentBalance" step="0.01" min="0" value="0" required>
                    </div>
                    <div class="form-group">
                        <label for="savingsBalance">Savings Account Balance</label>
                        <input type="number" id="savingsBalance" name="savingsBalance" step="0.01" min="0" value="0" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
                <p class="auth-link">Already have an account? <a href="/login">Login here</a></p>
            </div>
        </div>
    </main>
</body>
</html>

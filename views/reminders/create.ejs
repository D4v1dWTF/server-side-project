<% const title = 'Create Reminder'; const body = `
<div class="page-header">
    <h1>Create Bill Reminder</h1>
    <a href="/reminders" class="btn btn-secondary">Back</a>
</div>

<form method="POST" action="/reminders/create" class="main-form">
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" maxlength="200" placeholder="Enter reminder description (e.g., Rent Payment)" required pattern=".{1,200}" title="Description is required (max 200 characters)">
    </div>
    <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" id="amount" name="amount" step="0.01" min="0.01" placeholder="Enter amount (e.g., 500.00)" required title="Amount must be greater than 0">
    </div>
    <div class="form-group">
        <label for="dueDate">Due Date</label>
        <input type="date" id="dueDate" name="dueDate" required title="Select due date">
    </div>
    <div class="form-group">
        <label for="isRecurring">Recurring</label>
        <select id="isRecurring" name="isRecurring">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
`; %>
<%- include('../layout') %>


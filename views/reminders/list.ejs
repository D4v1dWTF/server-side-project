<% const title = 'Reminders'; const body = `
<div class="page-header">
    <h1>Bill Reminders</h1>
    <a href="/reminders/create" class="btn btn-primary">Create Reminder</a>
</div>

<% if (reminders && reminders.length > 0) { %>
<table class="data-table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Due Date</th>
            <th>Recurring</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% reminders.forEach(r => { %>
        <tr class="<%= !r.isPaid && new Date(r.dueDate) < new Date() ? 'overdue' : '' %>">
            <td><%= r.description %></td>
            <td>$<%= r.amount.toFixed(2) %></td>
            <td><%= new Date(r.dueDate).toLocaleDateString() %></td>
            <td><%= r.isRecurring ? 'Yes' : 'No' %></td>
            <td><%= r.isPaid ? 'Paid' : 'Pending' %></td>
            <td>
                <% if (!r.isPaid) { %>
                <form method="POST" action="/reminders/<%= r._id %>/paid" style="display:inline;">
                    <button type="submit" class="btn btn-small">Mark Paid</button>
                </form>
                <% } %>
                <a href="/reminders/<%= r._id %>/edit" class="btn btn-small">Edit</a>
                <form method="POST" action="/reminders/<%= r._id %>/delete" style="display:inline;" onsubmit="return confirm('Delete this reminder?')">
                    <button type="submit" class="btn btn-small btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<% } else { %>
<p>No reminders. <a href="/reminders/create">Create one</a></p>
<% } %>
`; %>
<%- include('../layout') %>

